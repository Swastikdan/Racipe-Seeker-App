    <script is:inline src="/darkmode.js"></script>
  </head>
  <body class="dark:bg-gray-950 font-sora">
    <Navbar />
    <main class="max-w-screen-xl mx-auto items-center">
      <slot />
    </main>
  </body><style is:global>
